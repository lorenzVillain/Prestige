
<div class="container">
 <div class="row">
  <div class="col-lg-12">
    <H1>See all products</H1>
  </div>
  <div class="col-lg-5 text-background">
    <h2><%= @product.title %></h2>
    <p>  <%= @product.description %></p>
    <p>  <%= @product.brand %> </p>
    <p>  <%= @product.price %> â‚¬ </p>
    <br>
    <%= link_to "to the product", product_path(@product), class: "btn btn-primary" %>
  </div>

  <div class="col-lg-1">
    <%= form_for @order do |f| %>
      Delivery date:    <%= f.date_select :delivery_date %>
