<div class="bg-white">
  <div class="container">
    <div class="row" style='margin-top: 100px;'>
      <div class="col-xs-6">
        <div class="social-box">

          <h2><%= @product.title %></h2>
          <%= image_tag @product.picture_path, class:"img-responsive" %>
          <br>
          <div class= "user-content">
        <div class="user-image">
          <%= image_tag "user1.jpg", class:"img-circle" %>
        </div>
        <div class="user-reviews">
            <div class="starrr" data-rating='4'></div>
        </div>

      </div>
          <div class="user">

            <div class="user-description">
              <h2 class="user-username">Owner:Teddy Java</h2>
              <p class="user-excerpt">28,graduated computer science, working as a freelancer web developer lives in Brussels Belgium</p>
            </div>
          </div>

        </div>
      </div>

      <div class="col-xs-6"  style='margin-top: 120px; padding-left:90px;'>
      <p>  <%= @product.description %></p>
      <p>  <%= @product.brand %> </p>
      <p>  <%= @product.price %> € </p>
        <%= form_for @order do |f| %>
        Delivery date:


          <div class="date" id='datetimepicker'>

            <%= f.text_field :delivery_date, placeholder: 'Select the date', class: 'datetimepicker-field hidden' %>
          </div>


        </br>
        Return date:
          <div class="input-group date" id='datetimepicker2'>
            <%= f.text_field :return_date, placeholder: 'Select the date', class: 'datetimepicker-field' %>
            <span class="input-group-addon">
              <span class="fa fa-calendar"></span>
            </span>
          </div>

        </br>
        <div class="theorder">
          <div class="container">
            <div class="row" style='margin-top: 100px;'>
              <div class="col-xs-6">
                  <div class="order">
                  <%= f.hidden_field :product_id, :value => @product.id%>
                  <%= f.submit "Order", class: "btn btn-primary pull-right" %>
                  <% end %>

              </div>
            </div>
          </div>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker').datetimepicker({
                inline: true,
                sideBySide: false
            });

        $('#datetimepicker2').datetimepicker();
    });
</script>









