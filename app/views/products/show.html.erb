



<div class="bg-white">
  <div class="container">
    <div class="row" style='margin-top: 100px;'>
      <div class="col-xs-6">
        <div class="social-box">

          <h2><%= @product.title %></h2>
          <%= image_tag @product.picture_path %>
          <br>
        </div>
      </div>
      <div class="col-xs-6"  style='margin-top: 120px; padding-left:90px;'>
      <p>  <%= @product.description %></p>
      <p>  <%= @product.brand %> </p>
      <p>  <%= @product.price %> â‚¬ </p>
        <%= form_for @order do |f| %>
        Delivery date:
          <div class="input-group date" id='datetimepicker'>
            <%= f.text_field :delivery_date, placeholder: 'Select the date', class: 'datetimepicker-field' %>
            <span class="input-group-addon">
              <span class="fa fa-calendar"></span>
            </span>
          </div>
        </br>
        Return date:
          <div class="input-group date" id='datetimepicker2'>
            <%= f.text_field :return_date, placeholder: 'Select the date', class: 'datetimepicker-field' %>
            <span class="input-group-addon">
              <span class="fa fa-calendar"></span>
            </span>
          </div>
        </br>
        <%= f.hidden_field :product_id, :value => @product.id%>
        <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker').datetimepicker();
        $('#datetimepicker2').datetimepicker();
    });
</script>




<ol class="progress-tracker">
  <li class="step active"><span class="step-name">Login</span></li>
  <li class="step"><span class="step-name">Confirm order</span></li>
  <li class="step"><span class="step-name">Payment</span></li>
</ol>



