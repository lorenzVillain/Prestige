<div class="container">
  <div style="margin-top: 75px;">
    <%= form_for @product do |f| %>

      <%= f.label :category %>
      <%= f.select :category, Product::CATEGORIES %>
      <%= f.label  :title %>
      <%= f.text_field :title%>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label  :brand %>
      <%= f.text_field :brand %>
      <%= f.label  :price %>
      <%= f.text_field :price %>
      <%= f.hidden_field :user_id, :value => current_user.id %>


     <%= f.button "Create" %>

    <% end %>
  </div>
</div>

